{
  "manifest_version": 3,
  "name": "Brazilian Document Generator",
  "version": "1.0.0",
  "description": "A simple brazilian document generator tool.",

  "action": {
    "default_popup": "index.html",
    "default_title": "Document Generator"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  
  "permissions": ["activeTab", "scripting", "contextMenus"]
}